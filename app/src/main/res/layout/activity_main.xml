<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Room Sample App"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_basic_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:text="Room"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_paging_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:text="Paging + Room"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_basic_room"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_paging_network_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:text="Paging + Room + Network"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_paging_room"/>
</androidx.constraintlayout.widget.ConstraintLayout>